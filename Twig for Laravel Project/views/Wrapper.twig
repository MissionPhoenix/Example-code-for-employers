  ======================================================== -->
</head>

<body>
<!-- Admin bar -->
{% if LiveEditEnabled == true %}
{% embed "/components/admin_bar.twig" %}
{% endembed %}
{% endif %}
  <!-- ======= Header ======= -->
    {% embed "/components/header.twig" %}
    {% endembed %}
  <!-- End Header -->

  <main id="main">

  {% block content %}{% endblock %}

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
    {% embed "/components/footer.twig" %}
    {% endembed %}
  <!-- End Footer -->

  <a href="#" class="back-to-top"><i class="ri-arrow-up-line"></i></a>
  <div id="preloader"></div>
   <!-- All custom JS and jQuery Files. I did not write the assetmanager for this as I am the front end developer for this project -->
  {% for js in Assets.jsArray %}
    <script src="{{ js }}"></script>
  {% endfor %}

</body>

</html>
