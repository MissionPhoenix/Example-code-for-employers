<!-- This template is used on every page of the site. I wrote most of the file, starting from a theme file for the homepage as a base -->
<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <title>{{ Route.meta_title }}</title>
  <meta content="{{ Route.meta_description }}" name="description"/>
  <meta id="csrf-token" name="csrf-token" content="{{ csrf_token() }}">

  <!-- Favicons -->
  <link href="/img/favicon.png" rel="icon">
  <link href="/img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Jost:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

   <!-- All general css files as well as view specific files are loaded here. I did not write the assetmanager for this as I am the front end developer for this project -->
  {% for css in Assets.cssArray %}
    <link href="{{ css }}" rel="stylesheet">
  {% endfor %}

  <!-- =======================================================
